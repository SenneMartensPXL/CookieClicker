<Window x:Class="CookieClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookieClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="ImgCookie" HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="100" Source="/asset/Cookie.png" MouseLeftButtonUp="ImgCookie_MouseLeftButtonUp"/>
        <Label x:Name="LblCookies" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="308,120,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Arial Black"/>
        <Image x:Name="ImgCursor" HorizontalAlignment="Left" Height="70" Margin="664,60,0,0" VerticalAlignment="Top" Width="70" Source="/asset/Cursor.png" MouseLeftButtonUp="ImgCursor_MouseLeftButtonUp"/>
        <Image x:Name="ImgGrandma" HorizontalAlignment="Left" Height="70" Margin="664,164,0,0" VerticalAlignment="Top" Width="70" Source="/asset/Grandma.png" MouseLeftButtonUp="ImgGrandma_MouseLeftButtonUp"/>
        <Label x:Name="LblCursor" HorizontalAlignment="Left" Margin="736,90,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="LblCursorPrice" HorizontalAlignment="Left" Margin="633,41,0,0" VerticalAlignment="Top" FontSize="12"/>
        <Label x:Name="LblGrandma" HorizontalAlignment="Left" Margin="736,198,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="LblGrandmaPrice" HorizontalAlignment="Left" Margin="633,140,0,0" VerticalAlignment="Top" FontSize="12"/>

    </Grid>
</Window>
